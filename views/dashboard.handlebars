<h1 class="mb-4">Your Dashboard</h1>

<div class="card mb-4">
    <div class="card-header">
        <h2 class="h4 mb-0">Create a New Post</h2>
    </div>
    <div class="card-body">
        <form class="new-post-form">
            <div class="mb-3">
                <label for="post-title" class="form-label">Title</label>
                <input type="text" class="form-control" id="post-title" required>
            </div>
            <div class="mb-3">
                <label for="post-content" class="form-label">Content</label>
                <textarea class="form-control" id="post-content" rows="3" required></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Create Post</button>
        </form>
    </div>
</div>

<h2 class="mb-3">Your Posts</h2>

{{#each posts}}
<div class="card mb-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h3 class="h5 mb-0">{{title}}</h3>
        <span class="text-muted">Posted on {{format_date createdAt}}</span>
    </div>
    <div class="card-body">
        <p class="card-text">{{content}}</p>
        <a href="/post/{{id}}" class="btn btn-primary me-2">View Post</a>
        <a href="/post/edit/{{id}}" class="btn btn-secondary">Edit Post</a>
    </div>
</div>
{{/each}}
