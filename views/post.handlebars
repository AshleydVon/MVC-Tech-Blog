<div class="card mb-4">
    <div class="card-body">
        <h2 class="card-title">{{title}}</h2>
        <p class="card-text">{{content}}</p>
        <p class="post-meta">Posted by {{user.username}} on {{format_date createdAt}}</p>
    </div>
</div>

<h3 class="mb-3">Comments</h3>
<div class="comments mb-4">
    {{#each comments}}
    <div class="comment">
        <p>{{content}}</p>
        <p class="post-meta">Commented by {{user.username}} on {{format_date createdAt}}</p>
        {{#if ../logged_in}}
        <button data-id="{{id}}" class="btn btn-sm btn-danger delete-comment">Delete</button>
        {{/if}}
    </div>
    {{/each}}
</div>

{{#if logged_in}}
<div class="card">
    <div class="card-body">
        <h4 class="card-title">Add a Comment</h4>
        <form class="comment-form">
            <div class="mb-3">
                <textarea id="comment-content" class="form-control" rows="3" required></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Submit Comment</button>
        </form>
    </div>
</div>
{{/if}}

<script src="/js/comment.js"></script>
<script src="/js/delete.js"></script>